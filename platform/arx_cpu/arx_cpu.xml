<?xml version="1.0"?>
<rvx>
	<platform>
		<name>arx_cpu</name>
		<status>described</status>
		<spec>
			<define>
				<name>sram_size</name>
				<value>64kB</value>
			</define>
			<define>
				<name>include_timer</name>
				<value type="bool">True</value>
			</define>
			<define>
				<name>include_spi_flash</name>
				<value type="bool">False</value>
			</define>
			<define>
				<name>num_led_checker</name>
				<value>1</value>
			</define>
      <define>
				<name>include_slow_dram</name>
				<value type="bool">True</value>
      </define>
		</spec>

		<ip_instance>
			<name>i_main_core</name>
			<library_name>rvc_orca_plus</library_name>
    </ip_instance>

    <clock_info>
			<define>
				<name>clk_system</name>
				<value type="dec">100000000</value>
      </define>
    </clock_info>

    <sw_define>
			<use_profiling type="bool">True</use_profiling>
    </sw_define>

	</platform>
</rvx>
